@{
    Layout = null;
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



<!DOCTYPE html>

<style>
    header {
        background-color: gray
    }

    .navbar {
        background: #222222;
    }

    .nav-item::after {
        content: '';
        display: block;
        width: 0px;
        height: 2px;
        background: #fec400;
        transition: 0.2s;
    }

    .nav-item:hover::after {
        width: 100%;
    }

    .navbar-dark .navbar-nav .active > .nav-link, .navbar-dark .navbar-nav .nav-link.active, .navbar-dark .navbar-nav .nav-link.show, .navbar-dark .navbar-nav .show > .nav-link, .navbar-dark .navbar-nav .nav-link:focus, .navbar-dark .navbar-nav .nav-link:hover {
        color: #fec400;
    }

    .nav-link {
        padding: 15px 5px;
        transition: 0.2s;
    }

    .dropdown-item.active, .dropdown-item:active {
        color: #212529;
    }

    .dropdown-item:focus, .dropdown-item:hover {
        background: #fec400;
    }

</style>

<link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
</head>


<body style="background-color: #121622; color: #a6adbe;" class="font-weight-light">
    <header>
        <nav class="navbar navbar-dark navbar-expand-md " style="background-color: #222838; ">
            <div class="navbar-brand font-weight-light text-center mt-2 float-left " style="color: #a6adbe; ">
                <h2 class="align-bottom font-weight-light ">Łukasz Adach  </h2>
            </div>
            <button class="navbar-toggler float-right" type="submit" data-toggle="collapse" data-target="#menu" aria-expanded="false" aria-controls="navbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="menu" class="collapse navbar-collapse navbar-bottom mt-3">
                <ul class="nav navbar-nav ml-auto navbar-right mr-3">
                    <li class="nav-item ">
                        <a class="nav-link " asp-controller="Blog" asp-action="PostList">Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  " asp-controller="Projects" asp-action="ProjectsList">Projekty</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  text-nowrap" asp-controller="Home" asp-action="About">O mnie</a>
                    </li>
                    <li class="nav-item mr-3 ">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">Kontakt</a>
                    </li>
                </ul>
                <div style="height:15px"> </div>
                <ul class="nav navbar-nav navbar-right ">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a class="btn btn-outline-info font-weight-light" asp-controller="Account" asp-action="Logout"><span class="glyphicon glyphicon-log-in"></span>Wyloguj</a></li>
                    }
                    else
                    {
                        <li><a class="btn btn-outline-info font-weight-light" asp-controller="Account" asp-action="Login"><span class="glyphicon glyphicon-log-in"></span>Panel admina</a></li>
                    }
                </ul>
            </div>
        </nav>
    </header>

    <div>
        @RenderBody()
    </div>




    @*<footer class="container-fluid  text-center bg-dark mt-4">
            <a class="text-center text-muted">Copyright 2018 Łukasz Adach</a>
        </footer>*@

</body>

</html>
<script src="~/node_modules/jquery/dist/jquery.min.js"></script>
<script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
