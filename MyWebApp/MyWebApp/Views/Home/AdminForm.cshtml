
@model Credentials


<h1 class="container text-center mt-5 bg-light">Logowanie do panelu admina</h1>

<form method="post" class="container text-center mt-5">
    <div class="form-row justify-content-center">
        <div class="form-group">
            <label class="mb-3" for="login">Login</label>
            <input class="form-control " id="login" placeholder="Wprowadź login" asp-for="Login" />
        </div>
    </div>
    <div class="form-row justify-content-center">
        <div class="form-group">
            <label class="mt-3" for="haslo">Hasło</label>
            <input class="form-control" id="haslo" placeholder="Wprowadź hasło" asp-for="Password" />
        </div>
    </div>

    <input class="btn btn-outline-primary " type="submit" name="Login" value="Zaloguj" />

</form>
@if (ViewBag.Error != null)
{
    <div class="alert alert-warning text-center mt-3 mb-2">
        <strong>Błąd!</strong> @ViewBag.Error
    </div>
}
<div class="text-center mt-3">
    <a class="btn btn-outline-info" asp-action="PostList" asp-controller="Blog">Powrót do listy</a>
</div>



