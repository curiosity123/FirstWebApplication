
@model Credentials


<h1 class="container text-center mt-5">Logowanie do panelu admina</h1>

<form method="post" class="container text-center mt-5">
    <div class="form-row justify-content-center">
        <div class="form-group">
            <input class="form-control " id="login" placeholder="Login" asp-for="Login" />
        </div>
    </div>
    <div class="form-row justify-content-center">
        <div class="form-group">
            <input class="form-control" id="haslo" placeholder="Hasło" asp-for="Password" />
        </div>
    </div>

    <input class="btn btn-success " type="submit" name="Login" value="Zaloguj" />

</form>
@if (ViewBag.Error != null)
{
    <div class="alert alert-warning text-center mt-3 mb-2">
        <strong>Błąd!</strong> @ViewBag.Error
    </div>
}
<div class="text-center mt-5">
    <a class="btn btn-primary" asp-action="PostList" asp-controller="Blog">Powrót do listy</a>
</div>



