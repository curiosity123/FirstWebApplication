
@model Credentials


<h1 class="container text-center mt-5  font-weight-normal ">Logowanie do panelu admina</h1>

<form method="post" class="container text-center mt-5">
    
    <div class="form-row justify-content-center">      
        <div class="form-group">
            <input class="form-control " id="login" placeholder="Login" asp-for="Login" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row justify-content-center">
        <div class="form-group">
            <input class="form-control" id="haslo" placeholder="Hasło" asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div>
        <div class="form-group">
            <input asp-for="RememberMe" type="checkbox" class="checkbox-inline font-weight-normal" />
            <label asp-for="RememberMe" class="font-weight-normal">Zapamiętać logowanie?</label>
            <span asp-validation-for="RememberMe" class="text-danger"></span>
        </div>
    </div>

    <input class="btn btn-success  font-weight-light  " type="submit" name="Login" value="Zaloguj" />

</form>
@if (ViewBag.Error != null)
{
    <div class="alert alert-warning  font-weight-normal  text-center mt-3 mb-2">
        <strong>Błąd!</strong> @ViewBag.Error
    </div>
}
<div class="text-center mt-5">
    <a class="btn btn-primary  font-weight-light " asp-action="PostList" asp-controller="Projects">Powrót do listy</a>
</div>



