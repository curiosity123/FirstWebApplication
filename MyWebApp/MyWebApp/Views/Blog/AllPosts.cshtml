@{
    @using MyWebApp.Models
    @using System.Collections.Generic
    @model List<Post>
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table>
    @foreach (Post p in Model)
    {
        <tr>
                <td>@p.Title  @p.Created.Created</td>
                <td>@p.Content</td>
                <td>@p.Id</td>
                <td>
                    @*<a href="/blog/details?id=@p.Id">Details</a>*@
                    <a asp-action="Details" asp-route-id="@p.Id">Get details</a>
               
                </td>
                <td>     <a asp-action="Edit"  asp-route-id="@p.Id" >Edit</a></td>
        </tr>
        
    }
    
    <a asp-action="Create">Create</a>
</table>