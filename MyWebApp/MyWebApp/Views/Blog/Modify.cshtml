@using MyWebApp.Models
@model Post
<meta charset="UTF-8">
<!DOCTYPE html>
<script src="~/node_modules/jquery/dist/jquery.slim.min.js"></script>
<script src="~/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/node_modules/popper.js/dist/umd/popper.min.js"></script>
<script src="~/node_modules/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/node_modules/bs4-summernote/dist/summernote-bs4.js"></script>
<link href="~/node_modules/bs4-summernote/dist/summernote-bs4.css" rel="stylesheet" />



<div class="text-center mt-3 mb-5"><h1 class="font-weight-normal">@ViewBag.Title</h1></div>


<form method="post" class="container">
    <div>
        <label asp-for="BackgroundContent" class="font-weight-normal">Background</label>
        <textarea asp-for="BackgroundContent" value="@Model.BackgroundContent" id="summernoteBackground"></textarea>
        <label asp-for="Title" class="font-weight-normal">Title</label>
        <textarea asp-for="Title" value="@Model.Title" id="summernote2"></textarea>
        @*<input class="form-control font-weight-normal" asp-for="Title" value="@Model.Title"></>*@

        <div class="form-group mt-3">
            <input asp-for="IsProject" type="checkbox" class="checkbox-inline font-weight-normal" />
            <label asp-for="IsProject" class="font-weight-normal">Jest projektem</label>
        </div>
        <div class="form-group ">
            <input asp-for="IsPublished" type="checkbox" class="checkbox-inline font-weight-normal" />
            <label asp-for="IsPublished" class="font-weight-normal">Opublikowany?</label>
        </div>


        <label asp-for="Category" class="font-weight-normal">Category</label>
        <select class="form-control font-weight-normal" asp-for="Category" asp-items="@Html.GetEnumSelectList<Category>()"></select>

        <label class="mt-3 font-weight-normal" asp-for="ShortDescription">ShortDescription</label>
        <textarea class="form-control mb-2 font-weight-normal" style="height: 100px" asp-for="ShortDescription" value="@Model.ShortDescription"></textarea>
    </div>


    <label class="mt-2 font-weight-normal" asp-for="HtmlContent">Content</label>
    <textarea asp-for="HtmlContent" id="summernote"></textarea>

    <div class="container text-center mt-3 mb-5">
        <a class="btn btn-danger font-weight-normal  float-left " asp-action="PostList" asp-controller="Blog">Porzuć</a>
        <input class="btn btn-success  font-weight-normal " type="submit" name="save" value="@ViewBag.ButtonTitle" />

    </div>
</form>


<script>
    $('#summernote').summernote({
        placeholder: 'Write something ;) ',
        tabsize: 2,
        height: 500
    });
    $('#summernote2').summernote({
        placeholder: 'Write something ;) ',
        tabsize: 2,
        height: 500
    });
    $('#summernoteBackground').summernote({
        placeholder: 'Write something ;) ',
        tabsize:3,
        width: 300,
        height: 300, 
    });
</script>

