@{
    @using MyWebApp.Models
    @model Post

    Comment comment = new Comment();

}




<div class="alert alert-success" role="alert">
    <h1 class="text-center" style="word-wrap: break-word;">@Model.Title</h1>
    <h6 class="text-secondary text-center">Utworzono: @Model.Created</h6>
</div>


<div class="container bg-light">
    <div style=" text-align: justify;    max-width: 100%;
    max-height: 100%; word-wrap: break-word;">@Html.Raw(Model.HtmlContent)</div>
</div>

@foreach (Comment c in Model.Comments)
{
    <div class="container text-left text-secondary bg-light mt-2 mb-2">
        <h6 class="text-left " style="word-wrap: break-word;">@c.NickName pisze:</h6>
        <h6 class="text-left text-dark" style="word-wrap: break-word;">@c.Text</h6>
        <form class="form-group" asp-controller="Blog" asp-action="RemoveComment" asp-route-commentId="@c.Id" asp-route-postId="@Model.Id" method="post">
            <button type="submit" class="btn btn-secondary">Usuń</button>
        </form>
    </div>
}


<form method="post" class="container bg-light " asp-controller="Blog" asp-action="AddComment" asp-route-comment="@comment" asp-route-postId="@this.Model.Id">
    <div class="form-group">
        <label class="text-secondary mt-2" for="Autor">Dodaj komentarz</label>
    </div>
    <div class="form-group">
        <label class="text-secondary" for="Autor">Autor</label>
        <input class="form-control" id="Autor" placeholder="Autor" asp-for="@comment.NickName" value="@comment.NickName"></>
    </div>

    <div class="form-group">
        <label class="text-secondary" for="comment">Komentarz</label>
        <textarea class="form-control" placeholder="Wpisz swój komentarz" id="comment" style="height: 100px" asp-for="@comment.Text" value="@comment.Text"></textarea>
    </div>

    <input class="btn btn-outline-success" type="submit" name="save" value="Dodaj" />
</form>






<div class="container text-center mt-2 mb-2">
    <a class="btn btn-outline-info mb-4" asp-action="PostList" asp-controller="Blog">Powrót do listy</a>
</div>

