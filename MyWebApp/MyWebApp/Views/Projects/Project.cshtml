@{
    @using MyWebApp.Models
    @model Post
    Comment comment = new Comment();
}




<div class="container mt-3">
    <h1 class="text-center font-weight-normal" style="word-wrap: break-word;">@Model.Title</h1>
    <h6 class="text-center  font-weight-normal h-75">Utworzono: @Model.Created</h6>
</div>

<div class="container">

    <div class="container mt-4" style="background-color: white; border-radius:5px;" >
        <div style="padding-top:15px; padding-bottom:5px">
            <div style="text-align: justify; max-width: 100%; max-height: 100%; word-wrap: break-word;">
                @Html.Raw(Model.HtmlContent)
            </div>
        </div>
    </div>
    <div class="form-group container">
        <label class=" font-weight-normal mt-4 " for="Autor">Wasze komentarze</label>
    </div>
    <div class="mt-3">
        @foreach (Comment c in Model.Comments.OrderByDescending(x => x.Created))
        {
        <div class="container text-left   mt-2 mb-2" style="border-radius: 25px 25px 0px 25px;  background-color: white; ">
            <div style="padding-top:5px; padding-bottom:0px">
                <h6 class="text-left font-weight-normal" style="word-wrap: break-word;">Napisano: @c.Created</h6>
            </div>
            <div style="padding-top:0px; padding-bottom:5px">
                <h6 class="text-left   font-weight-normal " style="word-wrap: break-word; ">@c.NickName pisze:</h6>
            </div>
            <div style=" padding-bottom:15px">
                <h6 class="text-left mb-3  font-weight-normal  " style="word-wrap: break-word;">@c.Text</h6>
            </div>
        </div>
        }
    </div>


    <form method="post" class="container bg-transparent "  asp-controller="Projects" asp-action="AddComment" asp-route-comment="@comment" asp-route-postId="@this.Model.Id">

        <label class=" font-weight-normal mt-2" for="Autor">Dodaj komentarz</label>
        <div class="form-group">
            <label class=" font-weight-normal " for="Autor">Autor</label>
            <input class="form-control" id="Autor" placeholder="Autor" asp-for="@comment.NickName" value="@comment.NickName"></>
        </div>

        <div class="form-group">
            <label class=" font-weight-normal " for="comment">Komentarz</label>
            <textarea class="form-control" placeholder="Wpisz swój komentarz" id="comment" style="height: 100px" asp-for="@comment.Text" value="@comment.Text"></textarea>
        </div>

        <input class="btn btn-success font-weight-light mb-3" type="submit" name="save" value="Dodaj" />
    </form>






    <div class="container text-center mt-2 mb-2">
        <a class="btn btn-info  font-weight-light  mb-4" asp-action="ProjectsList" asp-controller="Projects">Powrót do listy</a>
    </div>

</div>

